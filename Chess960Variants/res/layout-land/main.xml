<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rootlayout"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center">

    <LinearLayout
        android:id="@+id/dialogLayout"
        android:orientation="vertical"
        android:layout_width="wrap_content"  
        android:layout_height="match_parent"
        android:background="@color/brown"
        android:weightSum="7.0">
        
        <LinearLayout
            android:id="@+id/darkButtonRow2"
            android:orientation="horizontal"
            android:layout_width="match_parent"  
            android:layout_height="0dp"
            android:background="@color/brown"
            android:layout_weight="1.0"
            android:weightSum="2.0">
    	    <Button
                android:id="@+id/dark_restart"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/restart"
                android:onClick="restartDark"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/dark_undo"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/undo"
                android:onClick="undoDark"
                android:layout_weight="1.0"/>
        </LinearLayout> 
               
        <LinearLayout
            android:id="@+id/darkButtonRow1"
            android:orientation="horizontal"
            android:layout_width="match_parent"  
            android:layout_height="0dp"
            android:background="@color/brown"
            android:layout_weight="1.0"
            android:weightSum="2.0">
    	    <Button
                android:id="@+id/dark_reset"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/reset"
                android:onClick="resetDark"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/dark_randomize"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/randomize"
                android:onClick="randomizeDarkPieces"
                android:layout_weight="1.0"/>
        </LinearLayout> 
            
        <FrameLayout
            android:id="@+id/darkCapturedPieces"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:background="@color/brown"
            android:layout_weight="1.0"/>
            
       <LinearLayout
            android:id="@+id/settingsLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"  
            android:layout_height="0dp"
            android:background="@color/brown"
            android:layout_weight="1.0"
            android:weightSum="5.0">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/brown"
                android:layout_weight="1.0"/>
            <ImageButton
                android:id="@+id/soundToggleButton"
                android:scaleType="centerInside"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/sound_enabled"
                android:background="@null"
                android:onClick="toggleSound"
                android:layout_weight="1.0"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/brown"
                android:layout_weight="1.0"/>
            <ImageButton
                android:id="@+id/autoRotateToggleButton"
                android:scaleType="centerInside"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/auto_rotate_enabled"
                android:background="@null"
                android:onClick="toggleAutoRotate"
                android:layout_weight="1.0"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/brown"
                android:layout_weight="1.0"/>
        </LinearLayout> 
            
       <FrameLayout
            android:id="@+id/lightCapturedPieces"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:background="@color/brown"
            android:layout_weight="1.0"/>
            
        <LinearLayout
            android:id="@+id/lightButtonRow1"
            android:orientation="horizontal"
            android:layout_width="match_parent"  
            android:layout_height="0dp"
            android:background="@color/brown"
            android:layout_weight="1.0"
            android:weightSum="2.0">
            <Button
                android:id="@+id/light_reset"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/reset"
                android:onClick="resetLight"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/light_randomize"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/randomize"
                android:onClick="randomizeLightPieces"
                android:layout_weight="1.0"/>
        </LinearLayout>
            
        <LinearLayout
            android:id="@+id/lightButtonRow2"
            android:orientation="horizontal"
            android:layout_width="match_parent"  
            android:layout_height="0dp"
            android:background="@color/brown"
            android:layout_weight="1.0"
            android:weightSum="2.0">
            <Button
                android:id="@+id/light_restart"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/restart"
                android:onClick="restartLight"
                android:layout_weight="1.0"/>
            <Button
                android:id="@+id/light_undo"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="@string/undo"
                android:onClick="undoLight"
                android:layout_weight="1.0"/>
        </LinearLayout>
            
    </LinearLayout> 

    <FrameLayout
    	android:id="@+id/centerFrame"
    	android:layout_width="match_parent" 
    	android:layout_height="match_parent"
    	android:background="@drawable/wood_background_with_letters">
        <GridView
            android:id="@+id/boardGrid"
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:numColumns="8"
            android:verticalSpacing="0dp"
            android:horizontalSpacing="0dp"
            android:stretchMode="columnWidth"
            android:background="@drawable/board"/>
	</FrameLayout>
    
</LinearLayout>
